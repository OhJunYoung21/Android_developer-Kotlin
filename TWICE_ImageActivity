package com.example.twice_final

import androidx.appcompat.app.AppCompatActivity
import android.os.Bundle
import android.widget.ImageView

class ImageActivity : AppCompatActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_image)


        val getData = intent.getStringExtra("data")

        val hot = findViewById<ImageView>(R.id.girl)

        if(getData == "1"){
            hot.setImageResource(R.drawable.member_1)
        }

        if(getData == "2"){
            hot.setImageResource(R.drawable.member_2)
        }

        if(getData == "3"){
            hot.setImageResource(R.drawable.member_3)
        }

        if(getData == "4"){
            hot.setImageResource(R.drawable.member_4)
        }
        if(getData == "5"){
            hot.setImageResource(R.drawable.member_5)
        }
        if(getData == "6"){
            hot.setImageResource(R.drawable.member_6)
        }
        if(getData == "7"){
            hot.setImageResource(R.drawable.member_7)
        }
        if(getData == "8"){
            hot.setImageResource(R.drawable.member_8)
        }
        if(getData == "9"){
            hot.setImageResource(R.drawable.member_9)
        }

    }
}
